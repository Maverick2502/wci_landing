{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@assets/*": ["./assets/*"],
      "@shared/*": ["./shared/*"],
      "@shadcn/*": ["./shared/shadcn/*"],
      "@widgets/*": ["./widgets/*"],
      "@layouts/*": ["./layouts/*"],
      "@pages/*": ["./pages/*"],
      "@styles/*": ["./styles/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}
