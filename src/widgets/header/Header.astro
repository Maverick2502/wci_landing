---
import logo from "@assets/icons/wci.svg";
import NavigationMenu from "@shared/navigationMenu/components";
import { Image } from "astro:assets";
import "./header.scss";
const isActive = (path: string) => Astro.url.pathname === path || Astro.url.pathname.startsWith(path + "/");
---

<header class="header">
  <div class="header__container">
    <Image class="header__image" src={logo} alt="Website Name Logo" loading="eager" decoding="async" />
    <div class="header__btns">
      <div class="switcher">
        <a
          href="/en"
          aria-label="English"
          data-astro-prefetch="hover"
          class:list={["btn", { active: isActive("/en") }]}
        >
          EN
        </a>
        <a href="/" aria-label="Russian" data-astro-prefetch="hover" class:list={["btn", { active: isActive("/") }]}>
          RU
        </a>
      </div>
      <NavigationMenu client:visible />
    </div>
  </div>
</header>

<script></script>
