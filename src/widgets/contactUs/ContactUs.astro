---
import { Image } from "astro:assets";
import "./contactUs.scss";
import contactUs from "@assets/icons/export.svg";
---

<section class="contactUs">
  <div class="contactUs__container">
    <div class="h-block">
      <h1>letâ€™s talk</h1>
      <Image src={contactUs} alt="contactUs" />
    </div>

    <form class="form">
      <label class="visually-hidden" for="fullName">NAME*:</label>
      <input id="fullName" class="form__input" type="text" name="userFullName" placeholder="NAME*" required />

      <label class="visually-hidden" for="email">Email*:</label>
      <input id="email" class="form__input" type="email" name="userEmail" placeholder="EMAIL*" required />

      <label class="visually-hidden" for="message">Message*:</label>
      <textarea id="message" class="form__input" name="userMessage" placeholder="MESSAGE*" required></textarea>

      <button class="form__submitBtn" type="submit">Send</button>
    </form>
  </div>
</section>
