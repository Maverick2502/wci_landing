---
import { t } from "i18next";
import "./hero.scss";
import { Image } from "astro:assets";
import wciim from "@assets/images/wci_hero.png";
---

<section class="hero">
  <Image class="hero__image" src={wciim} alt="Logo" loading="eager" decoding="async" />
  <div class="hero__container">
    <div class="hero__content">
      <h1>
        {t("hero.headerFirstLine")}
      </h1>
      <h1>
        {t("hero.headerSecondLine")}
      </h1>

      <p>
        {t("hero.paragraph")}
      </p>

      <button>
        {t("hero.button")}
      </button>
    </div>
  </div>
</section>
