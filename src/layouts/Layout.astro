---
import "@fontsource-variable/geologica";
import "@fontsource-variable/inter";
import { HeadHrefLangs } from "astro-i18next/components";
import { ViewTransitions } from "astro:transitions";
import i18next from "i18next";
import "../styles/index.scss";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang={i18next.language}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:title" content="WCI - Your IT Outsourcing Partner" />
    <meta
      name="description"
      content="WCI provides expert IT outsourcing solutions to streamline your business operations and drive efficiency."
    />
    <meta
      property="og:description"
      content="WCI provides expert IT outsourcing solutions to streamline your business operations and drive efficiency."
    />
    <meta property="og:url" content="https://wci-landing.vercel.app/" />
    <meta property="og:type" content="website" />
    <meta property="og:image:alt" content="WCI - Your IT Outsourcing Partner" />
    <meta property="og:image" content="/og_image.svg" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:site_name" content="WCI - Outsourcing" />
    <meta http-equiv="Cache-Control" content="max-age=86400" />
    <meta name="theme-color" media="(prefers-color-scheme: light)" content="#005ee0" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="manifest" href="/manifest.webmanifest" />
    <HeadHrefLangs />
    <ViewTransitions fallback="swap" />
    <title>{title}</title>
    <script is:inline src="/scripts/vendor/lenis.js"></script>
    <script is:inline src="/scripts/vendor/lenis-setup.js"></script>
    <script is:inline src="./scripts/custom/update-favicon.js"></script>
  </head>
  <body>
    <slot />
    <style>
      /* CSS rules for the page scrollbar and scrolling experience with lenis library */

      .scrollbar-hide::-webkit-scrollbar {
        display: none;
      }

      .scrollbar-hide {
        -ms-overflow-style: none;
        scrollbar-width: none;
      }
      html.lenis {
        height: auto;
      }

      .lenis.lenis-smooth {
        scroll-behavior: auto !important;
      }

      .lenis.lenis-smooth [data-lenis-prevent] {
        overscroll-behavior: contain;
      }

      .lenis.lenis-stopped {
        overflow: hidden;
      }

      .lenis.lenis-scrolling iframe {
        pointer-events: none;
      }
    </style>
  </body>
</html>
